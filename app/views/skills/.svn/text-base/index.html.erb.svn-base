<h1>Listing skills</h1>

<table>
  <tr>
    <th>Character</th>
    <th>Name</th>
    <th>Rank</th>
    <th>Base stat</th>
  </tr>

<% for skill in @skills %>
  <tr>
    <td><%=h skill.character.name %></td>
    <td><%=h skill.name %></td>
    <td><%=h skill.rank %></td>
    <td><%=h skill.base_stat %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New skill', new_character_skill_path %>
